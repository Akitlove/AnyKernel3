    write /sys/module/cpu_boost/parameters/input_boost_ms 1000
    write /sys/module/cpu_boost/parameters/dynamic_stune_boost 50
    write /sys/module/cpu_boost/parameters/dynamic_stune_boost_ms 1000
    # Scheduler
    setprop sys.io.scheduler "cfq"
   #Tweaking GPU
	#write /sys/class/kgsl/kgsl-3d0/devfreq/governor performance
	#write /sys/class/kgsl/kgsl-3d0/max_gpuclk 652000000
    # Thermal
    write /sys/kernel/msm_thermal/enabled 0
    write /sys/kernel/msm_thermal/zone0 "1996800 2246400 41 40"
    write /sys/kernel/msm_thermal/zone1 "1785600 2150400 42 41"
    write /sys/kernel/msm_thermal/zone2 "1593600 2054400 43 42"
    write /sys/kernel/msm_thermal/zone3 "1516800 1977600 44 43"
    write /sys/kernel/msm_thermal/zone4 "1440000 1900800 45 44"
    write /sys/kernel/msm_thermal/zone5 "1363200 1824000 46 45"
    write /sys/kernel/msm_thermal/zone6 "1286400 1670400 47 46"
    write /sys/kernel/msm_thermal/zone7 "1132800 1363200 48 48"
    write /sys/kernel/msm_thermal/zone8 "1132800 1056000 49 48"
    write /sys/kernel/msm_thermal/zone9 "1056000 902400 50 49"
    write /sys/kernel/msm_thermal/zone10 "1056000 748800 51 50"
    write /sys/kernel/msm_thermal/sampling_ms 4000
    write /sys/kernel/msm_thermal/enabled 1
    # dmsg output
