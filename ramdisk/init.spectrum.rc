# SPECTRUM PROFILE MANAGER

# Initialization
on property:sys.boot_completed=1
  # Set default profile on first boot
  exec u:r:init:s0 root root -- /system/etc/init/init.spectrum.sh
  exec u:r:su:s0 root root -- /system/etc/init/init.spectrum.sh
  # Enable Spectrum support
  setprop spectrum.support 1

# Balance (default profile)
on property:persist.spectrum.profile=0
    # Stune-Boost
    write /dev/stune/top-app/schedtune.sched_boost 10
    write /dev/stune/foreground/schedtune.prefer_idle 1
    write /dev/stune/top-app/schedtune.boost 0
    write /dev/stune/top-app/schedtune.prefer_idle 1
    # Governor
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor "schedutil"
    write /sys/devices/system/cpu/cpu0/cpufreq/schedutil/up_rate_limit_us 1000
    write /sys/devices/system/cpu/cpu0/cpufreq/schedutil/down_rate_limit_us 15000
    write /sys/devices/system/cpu/cpu0/cpufreq/schedutil/iowait_boost_enable 0
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_governor "schedutil"
    write /sys/devices/system/cpu/cpu2/cpufreq/schedutil/up_rate_limit_us 1000
    write /sys/devices/system/cpu/cpu2/cpufreq/schedutil/down_rate_limit_us 15000
    write /sys/devices/system/cpu/cpu2/cpufreq/schedutil/iowait_boost_enable 0
    # CPU-Freq
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 307200
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 2188800
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_min_freq 307200
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_max_freq 2515200
    # Touchboost
    write /sys/module/msm_performance/parameters/touchboost 0
    # Input-Boost
    write /sys/module/cpu_boost/parameters/input_boost_enabled 1
    write /sys/module/cpu_boost/parameters/input_boost_freq "0:844800 2:691200"
    write /sys/module/cpu_boost/parameters/input_boost_ms 300
    write /sys/module/cpu_boost/parameters/dynamic_stune_boost 30
    write /sys/module/cpu_boost/parameters/dynamic_stune_boost_ms 500
    # Scheduler
    setprop sys.io.scheduler "maple"
    #Tweaking GPU
    #write /sys/class/kgsl/kgsl-3d0/devfreq/governor msm-adreno-tz
    # Thermal
    write /sys/kernel/msm_thermal/enabled 0
    write /sys/kernel/msm_thermal/zone0 "1996800 2246400 39 38"
    write /sys/kernel/msm_thermal/zone1 "1785600 2150400 40 39"
    write /sys/kernel/msm_thermal/zone2 "1593600 2054400 41 40"
    write /sys/kernel/msm_thermal/zone3 "1516800 1977600 42 41"
    write /sys/kernel/msm_thermal/zone4 "1440000 1900800 43 42"
    write /sys/kernel/msm_thermal/zone5 "1363200 1824000 44 43"
    write /sys/kernel/msm_thermal/zone6 "1363200 1670400 45 44"
    write /sys/kernel/msm_thermal/zone7 "1286400 1363200 46 45"
    write /sys/kernel/msm_thermal/zone8 "1286400 1056000 47 46"
    write /sys/kernel/msm_thermal/zone9 "1132800 902400 48 47"
    write /sys/kernel/msm_thermal/zone10 "1056000 748800 49 48"
    write /sys/kernel/msm_thermal/sampling_ms 4000
    write /sys/kernel/msm_thermal/enabled 1
    # dmsg output
    write /dev/kmsg "mcd: set profile Balance"

# Performance
on property:persist.spectrum.profile=1
    # Stune-Boost
    write /dev/stune/top-app/schedtune.sched_boost 15
    write /dev/stune/foreground/schedtune.prefer_idle 0
    write /dev/stune/top-app/schedtune.boost 1
    write /dev/stune/top-app/schedtune.prefer_idle 0
    # Governor
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor "schedutil"
    write /sys/devices/system/cpu/cpu0/cpufreq/schedutil/up_rate_limit_us 1000
    write /sys/devices/system/cpu/cpu0/cpufreq/schedutil/down_rate_limit_us 15000
    write /sys/devices/system/cpu/cpu0/cpufreq/schedutil/iowait_boost_enable 0
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_governor "schedutil"
    write /sys/devices/system/cpu/cpu2/cpufreq/schedutil/up_rate_limit_us 1000
    write /sys/devices/system/cpu/cpu2/cpufreq/schedutil/down_rate_limit_us 15000
    write /sys/devices/system/cpu/cpu2/cpufreq/schedutil/iowait_boost_enable 0
    # CPU-Freq
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 307200
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 2188800
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_min_freq 307200
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_max_freq 2515200
    # Touchboost
    write /sys/module/msm_performance/parameters/touchboost 0
    # Input-Boost
